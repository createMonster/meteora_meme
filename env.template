# Meteora Meme Strategy Environment Configuration
# Copy this file to .env and fill in your actual values

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# For testing, use: https://api.devnet.solana.com

# Wallet Configuration (CRITICAL - KEEP SECURE)
# Your private key can be in multiple formats - see PRIVATE_KEY_SETUP.md for details
# Examples:
# Base58: PRIVATE_KEY=5KQwrPbwdL6PhXujxW37FSSQZ1JiwsST4cqQzDeyXtP79zkvFD3
# JSON Array: PRIVATE_KEY='[1,2,3,...,64]'
# Comma-separated: PRIVATE_KEY="1,2,3,...,64"
# Hex: PRIVATE_KEY=0123456789abcdef...
PRIVATE_KEY=your_private_key_here

# API Keys
COINGECKO_API_KEY=your_coingecko_api_key_here
DUNE_API_KEY=your_dune_analytics_api_key_here

# Logging Configuration
LOG_LEVEL=info
# Options: error, warn, info, debug

# Strategy Configuration
STRATEGY_CONFIG_PATH=./config/strategy.json

# Performance Monitoring (Optional)
ENABLE_METRICS=true
METRICS_PORT=3000

# Risk Management
EMERGENCY_STOP=false
MAX_DAILY_LOSS=0.05
MAX_POSITION_SIZE=0.1

# Notification Settings (Optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Development Settings
NODE_ENV=production
# For development, use: development

# Database (Optional - for advanced tracking)
DATABASE_URL=your_database_url_here

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_PATH=./backups/

# Security Settings
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60

# Advanced Configuration
CUSTOM_SLIPPAGE=0.01
PRIORITY_FEE=0.001
COMPUTE_UNIT_LIMIT=200000 